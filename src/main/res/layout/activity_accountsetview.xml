<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarbox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="계정 설정"
            android:layout_gravity="center"
            />
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#aaa"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/profileimg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile"
                android:layout_gravity="center"
                android:background="@drawable/imgdesign"
                />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/cameraimg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/camera"
                android:background="@drawable/imgdesign2"
                />
            </LinearLayout>
        </FrameLayout>

            <TextView
                android:id="@+id/nametitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="이름"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nametext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="-"
                    android:layout_weight="6"/>

                <ImageButton
                    android:id="@+id/nameeditbtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/allow2"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:background="#aaa"/>


            <TextView
                android:id="@+id/emailtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"


                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="이메일"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/emailtext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="-"
                    android:layout_weight="6"/>

                <ImageButton
                    android:id="@+id/emaileditbtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/allow2"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:background="#aaa"/>


            <TextView
                android:id="@+id/passwordtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"


                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="비밀번호"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/passwordtext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="-"
                    android:layout_weight="6"/>

                <ImageButton
                    android:id="@+id/passwordeditbtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/allow2"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:background="#aaa"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/accountdeletetext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="게정탈퇴"
                    android:layout_weight="6"/>

                <ImageButton
                    android:id="@+id/accountdeleteeditbtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/allow2"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"

                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>