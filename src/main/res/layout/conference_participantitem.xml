<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/Linearclickbtn"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_member"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:elevation="6dp"
        app:cardCornerRadius="30dp"
        >
        <ImageView
            android:id="@+id/imgView_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/profileitemLinear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:layout_weight="5"
        >
        <TextView
            android:id="@+id/nameinfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#3f3f3f"
            android:textSize="18dp"
            android:text="-"
            android:gravity="start|center"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/usertype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/greybtn"
            android:textSize="18dp"
            android:paddingStart="5dp"
            android:layout_weight="1"
            android:text="-"
            android:gravity="start|center"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/mikebtn"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/mike_on"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />

        <ImageView
            android:id="@+id/camerabtn"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/cameraside_on"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>
</LinearLayout>